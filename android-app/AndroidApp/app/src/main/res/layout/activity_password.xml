<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.palashbansal96.payfc.PasswordActivity"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="32dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_account_key_black_48dp"
            android:background="@drawable/circle_background"
            android:id="@+id/main_image"
            />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your secure PIN"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:id="@+id/amtTxt"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PIN"
            android:inputType="numberPassword"
            android:text=""
            android:layout_below="@id/amtTxt"
            android:id="@+id/PIN"
            android:textColor="#00ff00"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay Money"
            android:layout_below="@id/PIN"
            android:layout_centerHorizontal="true"
            android:id="@+id/payMoney"
            />
    </RelativeLayout>
</LinearLayout>
